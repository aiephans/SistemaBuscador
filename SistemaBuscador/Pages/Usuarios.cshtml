@page
@model SistemaBuscador.Pages.UsuariosModel
@{

}

<div class="card">
    <div class="card-header">
        <h3>Usuarios</h3>
        <a asp-page="FormularioUsuario" class="btn btn-primary float-right">
            <i class="bi bi-plus-circle"></i>   
            Nuevo
        </a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Rol</th>
                    <th>País</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                <tr>
                    <td>@usuario.NombreUsuario</td>
                    <td>@usuario.Nombres</td>
                    <td>@usuario.Apellidos</td>
                    <td>@usuario.Rol</td>
                    <td>@usuario.Pais</td>
                    <td>
                        <a asp-page="ActualizarUsuario" asp-route-id="@usuario.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Editar"><i class="bi bi-pencil"></i></a>
                        <a asp-page="EliminarUsuario" asp-route-id="@usuario.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar"><i class="bi bi-trash"></i></a>
                        <a asp-page="CambioPassword" asp-route-id="@usuario.Id" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Cambiar contraseña"><i class="bi bi-key"></i></a>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>
        <a asp-page="Home" class="btn btn-secondary">Volver</a>
    </div>
</div>
