@page
@model SistemaBuscador.Pages.FormularioUsuarioModel
@{

}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3>Nuevo usuario</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="NombreUsuario"></label>
                <input asp-for="NombreUsuario" type="text" class="form-control" />
                <span class="text-danger" asp-validation-for="NombreUsuario"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombres"></label>
                <input asp-for="Nombres" type="text" class="form-control" />
                <span class="text-danger" asp-validation-for="Nombres"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos"></label>
                <input asp-for="Apellidos" type="text" class="form-control" />
                <span class="text-danger" asp-validation-for="Apellidos"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolId"></label>
                <select asp-for="RolId" class="form-control">
                    <option value="">--Seleccione--</option>
                    <option value="1">Administrador</option>
                    <option value="2">Supervisor</option>
                    <option value="3">Usuario</option>
                </select>
                <span class="text-danger" asp-validation-for="RolId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" />

                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword">Repetir Contraseña</label>
                <input asp-for="RePassword" type="password" class="form-control" />
                <span class="text-danger" asp-validation-for="RePassword"></span>
            </div>
            <a asp-page="Usuarios" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <div asp-validation-summary="All" class="text-danger mt-3"></div>
        </form>
    </div>

</div>
